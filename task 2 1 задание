#include <iostream>

#include <iostream>

// Рекурсивный метод: сумма цифр числа
int sumDigits(int n) {
    if (n < 10) return n;
    return (n % 10) + sumDigits(n / 10);
}

int main() {

    // Цикл с выводом чисел — поставьте точку останова на этой строке
    for (int i = 1; i <= 10; i++) {
        std::cout << "i = " << i << std::endl;
    }

    int number = 987;
    int result = sumDigits(number);    // рекурсивный вызов

    std::cout << "Sum of digits: " << result << std::endl;

    return 0;
}

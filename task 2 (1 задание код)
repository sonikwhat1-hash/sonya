1 задание
#include <iostream>

#include <iostream>

// Рекурсивный метод
int factorial(int n) {
    if (n <= 1) return 1; // Базовый случай рекурсии
    return n * factorial(n - 1); // Рекурсивный вызов
}

int main() {
    // Цикл для демонстрации
    std::cout << "Cycle output:" << std::endl;
    for (int i = 1; i <= 10; i++) {
        int result = factorial(i); // Вызов рекурсивного метода
        std::cout << "Factorial of " << i << " = " << result << std::endl;
    }

    // Дополнительные переменные для демонстрации окон
    int a = 10;
    double b = 3.14;
    std::string text = "Debugging";

    std::cout << "\nProgram finished." << std::endl;
    return 0;
}

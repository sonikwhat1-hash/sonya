#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");

    double a;

    cout << "Введите длину стороны ромба: ";
    cin >> a;

    if (a <= 0) {
        cout << "Ошибка: сторона должна быть больше 0" << endl;
        return 1;
    }

    double p = 4 * a;
    cout << "Периметр ромба: " << p << endl;

    return 0;
}
